# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-with-os-urandom-24
FLASK_DEBUG=False
PORT=5000

# Database Configuration (PostgreSQL)
# Option 1: Use DATABASE_URL (recommended for CapRover/cloud)
DATABASE_URL=postgresql://postgres:password@localhost:5432/interac_transfers

# Option 2: Use individual components
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=interac_transfers
# DB_USER=postgres
# DB_PASSWORD=your-postgres-password

# Email Configuration (SMTP)
SMTP_SENDER_EMAIL=your-email@gmail.com
SMTP_SENDER_PASSWORD=your-app-password-here
SMTP_SENDER_NAME=Interac e-Transfer
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Optional SMTP Settings
SMTP_BATCH_SIZE=50
SMTP_DELAY=1
SMTP_MAX_RETRIES=3
